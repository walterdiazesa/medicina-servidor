// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE")
}

model Test {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  lab      Lab      @relation(fields: [labId], references: [id])
  issuer User? @relation(fields: [issuerId], references: [id])
  patient  Patient?  @relation(fields: [patientId], references: [id])
  sex      String
  tests    Json
  date   DateTime
  labId String    @db.ObjectId
  issuerId String?    @db.ObjectId
  patientId String?    @db.ObjectId
  listenerRequest  ListenerRequest?
  isDeleted Boolean @default(false)
}

model Chem {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  chem String
  raw String
  ip  String
  reqUsername String
}

model ListenerRequest {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  test      Test      @relation(fields: [testId], references: [id])
  ip  String
  reqUsername String
  testId String    @db.ObjectId
}

model Patient {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  email String  @unique
  dui String @unique
  phone String @unique
  name  String
  sex   String
  dateBorn DateTime
  Test Test[]
}

model Lab {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  email String  @unique
  hash String
  name  String @unique
  phone String @unique
  address String
  publicPhone String
  web String? 
  publicEmail String
  img   String
  installer String?
  rsaPrivateKey String
  createdAt DateTime @default(now())
  userIds String[]   @db.ObjectId
  ownerIds String[]   @db.ObjectId
  Test  Test[]
  Users User[] @relation(fields: [userIds], references: [id])
  Owners User[] @relation("owners", fields: [ownerIds], references: [id])
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  slug String @unique
  name String
  hash String
  profileImg String?
  createdAt DateTime @default(now())
  labIds String[] @db.ObjectId
  Lab Lab[] @relation(fields: [labIds], references: [id])
  ownerIds String[] @db.ObjectId
  Owners Lab[] @relation("owners", fields: [ownerIds], references: [id])
  Test Test[]
}